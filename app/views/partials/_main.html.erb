<div class="row">
  <div v-show="!finishExercise" class="col col-lg-8 offset-md-1" id="text"></div>

  <div class="text-center col col-lg-3" v-show="stats" v-cloak>
    <div class="alert alert-info" role="alert">
      Accuracy: <strong>{{ accuracy }}</strong>
      <br>
